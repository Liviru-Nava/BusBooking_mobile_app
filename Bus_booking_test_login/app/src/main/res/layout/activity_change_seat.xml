                    app:strokeColor="#1149EB"
                    app:strokeWidth="4dp" />


                <Button
                    android:id="@+id/seat_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Seat 5"
                    android:textColor="#1149EB"
                    app:strokeColor="#1149EB"
                    app:strokeWidth="4dp" />

                <Button
                    android:id="@+id/seat_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Seat 6"
                    android:textColor="#1149EB"
                    app:strokeColor="#1149EB"
                    app:strokeWidth="4dp" />

                <Button
                    android:id="@+id/seat_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Seat 7"
                    android:textColor="#1149EB"
                    app:strokeColor="#1149EB"
                    app:strokeWidth="4dp" />

                <Button
