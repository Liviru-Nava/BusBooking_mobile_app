                    app:strokeWidth="4dp" />

                <Button
                    android:id="@+id/seat_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Seat 16"
                    android:textColor="#1149EB"
                    app:strokeColor="#1149EB"
                    app:strokeWidth="4dp" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
