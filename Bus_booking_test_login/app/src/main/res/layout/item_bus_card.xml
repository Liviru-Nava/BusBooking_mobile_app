<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <!-- Left Section with Bus Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bus_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Name"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_bus_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Fee"
            android:textSize="14sp"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tv_seats_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of Seats Available"
            android:textSize="14sp"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tv_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Name"
            android:textSize="14sp"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tv_bus_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus License"
            android:textSize="14sp"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tv_departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure time"
            android:textSize="14sp"
            android:paddingTop="4dp"/>
    </LinearLayout>

    <!-- Right Section with Location and Book Button -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_starting_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colombo"
            android:textSize="14sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tv_ending_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Galle"
            android:textSize="14sp"
            android:paddingBottom="4dp"/>

        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="8dp"
            android:onClick="onBookNow"/>
    </LinearLayout>

</LinearLayout>
